# PostgreSQL (Docker container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=incubator_db
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password@db:5432/incubator_db

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883

# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme_in_production
MINIO_BUCKET=firmware
MINIO_SECURE=false

# Auth - IMPORTANT: Generate a new secret key for production!
# Run: openssl rand -hex 32
SECRET_KEY=changeme_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Add your frontend domains
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://your-domain.com"]
